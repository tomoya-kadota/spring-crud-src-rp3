<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.sss.crud.mapper.EmployeeMapper">

	<!-- 全件検索 -->
	<select id="findAllEmployeesOrderByEmpId"
		resultType="jp.co.sss.crud.entity.Employee">
		SELECT *
		FROM Employee e
		INNER JOIN Department d ON e.dept_id
		= d.dept_id
		ORDER BY e.emp_id ASC
	</select>

	<!-- 主キー検索 -->
	<select id="findByEmpId"
		resultType="jp.co.sss.crud.entity.Employee">
		SELECT *
		FROM Employee e
		INNER JOIN Department d ON e.dept_id
		= d.dept_id
		WHERE emp_id = #{empId}
	</select>

	<!-- TODO 社員名検索 -->
	<select id="findByEmpNameContainingOrderByEmpId"
		resultType="jp.co.sss.crud.entity.Employee">
	</select>

	<!-- TODO 部署ID検索 -->
	<!-- author DANG -->
	<select id="findByDepartmentDeptIdOrderByEmpId"
		resultType="jp.co.sss.crud.entity.Employee">
		SELECT *
		FROM Employee e
		INNER JOIN Department d ON e.dept_id =
		d.dept_id
		<if test="deptId != null and deptId != ''">
			WHERE d.dept_id = #{deptId}
		</if>
		ORDER BY e.dept_id
	</select>

	<!-- TODO ログイン用のIDとパスワード検索 -->
	<!-- author 原 -->
	<select id="findByEmpIdAndEmpPass"
		resultType="jp.co.sss.crud.entity.Employee">
		SELECT *
		FROM Employee
		WHERE emp_id = #{empId}
		AND emp_pass = #{empPass}
	</select>


	<!-- 単一登録。社員IDは自動採番 -->
	<insert id="insert"
		parameterType="jp.co.sss.crud.entity.Employee" useGeneratedKeys="true"
		keyProperty="empId">

		INSERT INTO employee
		(
		emp_pass,emp_name,gender,address,birthday,authority,dept_id
		) VALUES (
		#{empPass},#{empName},#{gender},#{address},#{birthday},#{authority},#{deptId}
		)
	</insert>

	<!-- TODO IDによる単一変更 -->
	<!-- author 角田 -->
	<update id="update"
		parameterType="jp.co.sss.crud.entity.Employee">
		UPDATE employee
		SET
		emp_pass = #{empPass},
		emp_name = #{empName},
		gender = #{gender},
		address = #{address},
		birthday = #{birthday},
		authority = #{authority},
		dept_id = #{deptId}
		WHERE
		emp_id = #{empId}
	</update>

	<!-- TODO IDによる単一削除 -->
	<delete id="delete" parameterType="int">

	</delete>


</mapper>